<h3 class="me-auto">Users</h3>

<table class="table table-sm w-50">
  <thead>
    <tr>
      <th>Usename</th>
      <th>E-mail</th>
      <th>Average rating</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.email %></td>
        <td><%= user.ratings.average(:rating).round(2) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
