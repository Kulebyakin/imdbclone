<%= form_with(model: [ :admin, movie ]) do |form| %>
  <% if movie.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(movie.errors.count, "error") %> prohibited this movie from being saved:</h2>

      <ul>
        <% movie.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group my-2">
    <%= form.label :title %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group my-2">
    <%= form.label :description %>
    <%= form.text_area :description, rows: 10, class: "form-control" %>
  </div>

  <div class="form-check my-2">
    <%= form.label :Genres %>
    <%= form.collection_check_boxes :category_ids, Category.all, :id, :title do |b| %>
      <div class="row">
        <%= b.label do %>
          <div class="col-xs-4">
            <%= b.check_box(class: "form-check-input") %>
          </div>

          <div class="col-xs-8">
            <%= b.label %>
          </div>       
        <% end %>
      </div>
    <% end %>
  </div>



  <div class="form-group">
    <%= form.submit class: "btn btn-success my-3" %>
  </div>
<% end %>
